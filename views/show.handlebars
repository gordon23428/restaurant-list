<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      <div> 
        <h3>餐點:</h3>
        {{#each restaurant.menu}}
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{this.food_name}}</h5>
              <p class="card-text">{{this.food_price}}</p>
              <input type="text" placeholder="數量">
              <a href="#" class="btn btn-primary">加入購物車</a>
            </div>
          </div>
        {{/each}}
      </div>


    </div>
    <a href="/">返回</a>
  </div>
</div>